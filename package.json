{
  "name": "sharg-quote",
  "version": "0.1.0",
  "description": "A Node library for quoting/escaping shell commands.",
  "author": {
    "name": "oO",
    "url": "https://github.com/oocytanb"
  },
  "license": "MIT",
  "repository": "https://github.com/oocytanb/sharg-quote",
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.mts"
    },
    "./lib": {
      "import": "./lib/index.mjs",
      "types": "./lib/index.d.mts"
    },
    "./lib/*": {
      "import": "./lib/*.mjs",
      "types": "./lib/*.d.mts"
    }
  },
  "main": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "lint:fix": "prettier --write ./src/**/*.mts ./test/**/*.ts --parser=typescript && prettier --write ./build_script/**/*.mjs && eslint --ext mjs ./build_script",
    "lint": "prettier --check ./src/**/*.mts ./test/**/*.ts --parser=typescript && prettier --check ./build_script/**/*.mjs && eslint --fix --ext mjs ./build_script",
    "test:compile": "tsc --project tsconfig.test.json",
    "test": "ava",
    "test_c": "npm run test:compile && npm run coverage",
    "coverage:clean": "rimraf coverage",
    "coverage": "c8 npm run test",
    "clean": "rimraf ./lib && rimraf ./build && npm run coverage:clean",
    "build:generate_dts": "node ./build_script/generate_dts.mjs",
    "build": "npm run lint:fix && npm run clean && tsc && npm run build:generate_dts && npm run test:compile",
    "build_c": "npm run build && npm run coverage"
  },
  "devDependencies": {
    "@types/node": "^16.11.12",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "ava": "^4.0.0-rc.1",
    "c8": "^7.10.0",
    "cp-file": "^9.1.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "globby": "^12.0.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "typescript": "^4.6.0-dev.20211208",
    "upath": "^2.0.1"
  },
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "quote",
    "quoting",
    "escape",
    "escaping",
    "arg",
    "argument",
    "command",
    "CommandLine",
    "Shell",
    "sh",
    "Bash",
    "cmd",
    "cmd.exe",
    "pwsh"
  ],
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "parserOptions": {
        "ecmaVersion": "es2020",
        "sourceType": "module"
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "ava": {
    "files": [
      "build/**/*.test.js"
    ],
    "failFast": true,
    "failWithoutAssertions": false,
    "verbose": true,
    "timeout": "1m"
  },
  "c8": {
    "include": [
      "lib/**/*.mjs"
    ],
    "reporter": [
      "text",
      "html"
    ]
  }
}
