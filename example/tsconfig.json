{
  "compilerOptions": {
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": false,
    "sourceMap": false,
    "newLine": "lf",
    "noEmitOnError": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["./src/*.ts"]
}
