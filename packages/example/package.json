{
  "private": true,
  "name": "sharg-quote-examples",
  "type": "module",
  "files": [
    "src"
  ],
  "scripts": {
    "lint:fix": "prettier --write ./src/**/*.ts ./test/**/*.js && eslint --fix ./src ./test",
    "lint": "prettier --check ./src/**/*.ts ./test/**/*.js && eslint ./src ./test",
    "test": "ava",
    "test_c": "npm run test",
    "clean": "rimraf ./build",
    "build": "npm run lint:fix && npm run clean && tsc",
    "build_c": "npm run build && npm run test_c"
  },
  "dependencies": {
    "sharg-quote": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^16.11.39",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "ava": "^4.3.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.3"
  },
  "engines": {
    "node": ">=16"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "parserOptions": {
        "ecmaVersion": "es2020",
        "sourceType": "module"
      }
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "failFast": true,
    "failWithoutAssertions": false,
    "verbose": true,
    "timeout": "1m"
  }
}
